<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/friendlistpage2" >
        
      
         <ImageButton
             android:id="@+id/back18"
             android:layout_width="60dp"
             android:layout_height="27dp"
             android:layout_alignParentLeft="true"
            
             android:layout_alignParentTop="true"
             android:layout_marginTop="0dp"
               android:layout_marginLeft="1dp"
             android:onClick="backclick18"
             android:padding="0dp"
             android:alpha="0"
             android:src="@drawable/newback" />

         <Button
             android:id="@+id/button1"
             android:layout_width="60dp"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_alignParentTop="true"
             android:alpha="0" 
             android:onClick="showWindowme2"/>

         <Button
             android:id="@+id/button2"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/back18"
             android:layout_below="@+id/button1"
             android:layout_marginTop="38dp"
             android:alpha="0" 
             android:onClick="addfriend"/>

         <Button
             android:id="@+id/button3"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/button2"
             android:layout_below="@+id/button2"
             android:alpha="0" 
             android:onClick="friendgroup"/>

        </RelativeLayout>
</LinearLayout>
